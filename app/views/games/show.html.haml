- model_class = Game
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:description)
    %dd
      %pre.prettyprint= @game.description
    %dt.label.label-default= model_class.human_attribute_name(:status)
    %dd
      %pre.prettyprint= @game.status
    %dt.label.label-default= model_class.human_attribute_name(:game_master_id)
    %dd
      %pre.prettyprint= @game.game_master_id

.form-group
  = link_to t('.back', :default => t("helpers.links.back")), games_path, :class => 'btn btn-default'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_game_path(@game), :class => 'btn btn-default'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), game_path(@game), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'