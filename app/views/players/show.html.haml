- model_class = Player
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:nickname)
    %dd
      %pre.prettyprint= @player.nickname
    %dt.label.label-default= model_class.human_attribute_name(:game_id)
    %dd
      %pre.prettyprint= @player.game_id

.form-group
  = link_to t('.back', :default => t("helpers.links.back")), game_players_path(@game), :class => 'btn btn-default'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_game_player_path(@game, @player), :class => 'btn btn-default'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), game_player_path(@game, @player), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'